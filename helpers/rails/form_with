<%= form_with( model: @shoe, class: "new shoe" ) do |f| %>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
    <%= f.label :condition %>
    <%= f.text_field :condition %>
    <%= f.label :color %>
    <%= f.text_field :color %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.submit %>
<% end %>

